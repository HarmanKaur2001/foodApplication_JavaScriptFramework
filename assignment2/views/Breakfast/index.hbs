<h1>{{title}}</h1>
{{!-- TODO: add navigation to add a new breakfast --}}
<a href="/breakfast/add">Add a new breakfast</a>
{{!-- TODO: add a table to display breakfasts from MongoDB --}}
<table class="table table-striped table-hover">
  <thead>
    <th>bread</th>
    <th>coffee</th>
    <th>tea</th>
    <th>sandwich</th>
    <th>oatmeal</th>
    <th>Fruits</th>
    <th>juice</th>
        <th>status</th>


    <th></th>
  </thead>
  <tbody>
  {{#each dataset}}
    <tr>
      <td>{{this.bread}}</Td>
      <td>{{this.coffee}}</Td>
      <td>{{this.tea}}</Td>
      <td>{{this.sandwich}}</Td>
      <td>{{this.oatmeal}}</Td>
      <td>{{this.fruits}}</Td>
      <td>{{this.juice}}</Td>
            <td>{{this.status}}</Td>

      <td>
        <a href="/breakfast/edit/{{this._id}}" class="btn btn-primary">Edit</a>
        <a href="/breakfast/delete/{{this._id}}" class="btn btn-danger" onclick="confirmDeletion()">Delete</a>
      </td>
    </tr>
  {{/each}}
  </tbody>
</table>